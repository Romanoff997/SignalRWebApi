@page
@model SignalRWebClient.Pages.CreateModel
@{
}

<form method="post">

    <h2></h2>

    <div class="div-box">
        <div class="form-group">
            <label asp-for="city.name" class="control-label"></label>
            <input asp-for="city.name" class="form-control" type="text" value="@Model.city.name" />
            <span asp-validation-for="city.name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="city.population" class="control-label"></label>
            <input asp-for="city.population" class="form-control" type="text" value="@Model.city.population" />
            <span asp-validation-for="city.population" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="city.fondation" class="control-label"></label>
            <input asp-for="city.fondation" class="form-control" type="text" value="@Model.city.fondation" />
            <span asp-validation-for="city.fondation" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Add City" class="btn btn-success" />
        </div>


    </div>
</form>